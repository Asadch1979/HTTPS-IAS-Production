@{
    Layout = "_BlankLayout";
    ViewData["Title"] = "System Maintenance";
}

<div class="text-center">
    <section class="text-center">
        <div class="p-5 bg-image bg-gradient maintenance-hero">
            <img class="maintenance-logo" src="~/Images/ztbllogo.png" />
        </div>
        <div class="card mx-4 mx-md-5 shadow-5-strong maintenance-card">
            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6">
                        <h2 class="fw-bold mb-5 maintenance-heading">System is currently under maintenance.</h2>
                        <p class="text-white">Please try again later.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
