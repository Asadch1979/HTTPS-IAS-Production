@{
    ViewData["Title"] = "Head Review";
    Layout = "_Layout";
    var complaintId = ViewData["ComplaintId"];
    var assessmentId = ViewData["AssessmentId"];
}
<h4>Head Review</h4>
<form id="reviewForm">
    <input type="hidden" name="ComplaintId" value="@complaintId" />
    <input type="hidden" name="AssessmentId" value="@assessmentId" />
    <div class="mb-2">
        <label class="form-label">Directions</label>
        <textarea class="form-control" name="Directions"></textarea>
    </div>
    <div class="mb-2">
        <label class="form-label">Assign to I&I Unit</label>
        <select class="form-select" name="AssignedToUnit" id="AssignedToUnit">
            <option value="">--Select--</option>
            <option value="1">I&IU Sukkur</option>
            <option value="2">I&IU Multan</option>
            <option value="3">I&IU Lahore</option>
            <option value="4">I&IU H.O</option>
        </select>
    </div>
    <div class="mb-2">
        <label class="form-label">Team Lead</label>
        <select class="form-select" name="TeamLeadId" id="TeamLeadId"></select>
    </div>
    <div class="mb-2">
        <label class="form-label">Team Members</label>
        <select multiple class="form-select" name="TeamMembers" id="TeamMembers"></select>
    </div>
    <div class="mb-2">
        <label class="form-label">Assigned On</label>
        <input type="date" class="form-control" name="AssignedOn" id="AssignedOn" readonly />
    </div>
    <div class="mb-2">
        <label class="form-label">Due Date</label>
        <input type="date" class="form-control" name="DueDate" id="DueDate" readonly />
    </div>
    <div class="mb-2">
        <label class="form-label">Refer Back Comments</label>
        <textarea class="form-control" name="ReferredBackComments"></textarea>
    </div>
    <input type="hidden" name="Action" id="Action" value="Submit" />
    <button type="submit" class="btn btn-primary me-2" id="submitBtn">Submit</button>
    <button type="button" class="btn btn-secondary" id="referBackBtn">Refer Back</button>
</form>
@section Scripts{
<script>
    $(function(){
        function loadEmployees(){
            var unit = $('#AssignedToUnit').val();
            if(!unit) return;
            $.post(g_asiBaseURL + '/ApiCalls/GetAuditEmployees', { entityId: unit }, function(d){
                $('#TeamLeadId').empty();
                $('#TeamMembers').empty();
                $.each(d, function(i,v){
                    $('#TeamLeadId').append('<option value="'+v.id+'">'+v.name+'</option>');
                    $('#TeamMembers').append('<option value="'+v.id+'">'+v.name+'</option>');
                });
            });
        }

        var today = new Date();
        var due = new Date();
        due.setDate(today.getDate()+10);
        $('#AssignedOn').val(today.toISOString().substr(0,10));
        $('#DueDate').val(due.toISOString().substr(0,10));

        $('#AssignedToUnit').on('change', loadEmployees);

        $('#referBackBtn').on('click', function(){
            $('#Action').val('ReferBack');
            $('#reviewForm').submit();
        });

        $('#submitBtn').on('click', function(){
            $('#Action').val('Submit');
        });

        $('#reviewForm').on('submit', function(e){
            e.preventDefault();
            var teamMembers = $('#TeamMembers').val() || [];
            var data = {
                ComplaintId: $('#reviewForm [name="ComplaintId"]').val(),
                AssessmentId: $('#reviewForm [name="AssessmentId"]').val(),
                Directions: $('#reviewForm [name="Directions"]').val(),
                AssignedToUnit: $('#reviewForm [name="AssignedToUnit"]').val(),
                TeamLeadId: $('#reviewForm [name="TeamLeadId"]').val(),
                TeamMembers: teamMembers.join(','),
                AssignedOn: $('#reviewForm [name="AssignedOn"]').val(),
                DueDate: $('#reviewForm [name="DueDate"]').val(),
                ReferredBackComments: $('#reviewForm [name="ReferredBackComments"]').val(),
                Action: $('#reviewForm [name="Action"]').val()
            };
            $.ajax({
                url: g_asiBaseURL + '/ApiCalls/AddHeadReview',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function(){
                    alert('Review submitted');
                }
            });
        });
    });
</script>
}
