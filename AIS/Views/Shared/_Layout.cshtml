            background: rgba(56,189,248,.12);
            border: 1px solid rgba(56,189,248,.18);
        }

        /* When sidebar is collapsed, show only bullets (no text, no plus icon) */
        body.ias-sidebar-collapsed .ias-acc-text{ display:none; }
        body.ias-sidebar-collapsed .ias-acc-icon{ display:none; }
        body.ias-sidebar-collapsed .ias-acc-panel{ display:none !important; }
.ias-nav-link:active{ transform: translateY(1px); }

        .ias-page-link.active{
            background: rgba(56,189,248,.16);
            border: 1px solid rgba(56,189,248,.18);
        }

        .ias-nav-bullet{
            width:8px;
            height:8px;
            border-radius:50%;
            background: rgba(255,255,255,.35);
            flex: 0 0 auto;
        }

        /* CONTENT */
        .ias-content{
            display:flex;
            flex-direction:column;
            min-width:0;
        }

        .ias-main{
            padding: 16px 16px 26px;
        }

        .ias-footer{
            border-top: 1px solid var(--ias-border);
            background:#fff;
            color: var(--ias-muted);
            font-size: 12px;
            padding: 12px 16px;
            margin-top: auto;
        }

        /* Collapsed sidebar (desktop) */
        body.ias-sidebar-collapsed .ias-shell{
            grid-template-columns: var(--ias-sidebar-collapsed-w) 1fr;
        }
        body.ias-sidebar-collapsed .ias-sidebar__searchwrap,
        body.ias-sidebar-collapsed .ias-nav-title,
        body.ias-sidebar-collapsed .ias-subtitle,
        body.ias-sidebar-collapsed .ias-nav-link span:last-child{
            display:none !important;
        }
        body.ias-sidebar-collapsed .ias-nav-link{
            justify-content:center;
            padding: 12px 8px;
        }

        /* Mobile: sidebar becomes offcanvas */
        @@media (max-width: 991.98px){
            .ias-shell{ grid-template-columns: 1fr; }
            .ias-sidebar{
                position: fixed;
                left: 0;
                top: 0;
                width: var(--ias-sidebar-w);
                transform: translateX(-100%);
                transition: transform .2s ease;
                z-index: 1040;
            }
            body.ias-sidebar-open .ias-sidebar{
                transform: translateX(0);
            }
            .ias-backdrop{
                display:none;
                position: fixed;
                inset: 0;
                background: rgba(2,6,23,.45);
                z-index: 1035;
            }
            body.ias-sidebar-open .ias-backdrop{ display:block; }
        }
        body.ias-hide-sidebar .ias-shell{
            grid-template-columns: 1fr;
        }
        body.ias-hide-sidebar .ias-sidebar{
            display:none;
        }
        body.ias-hide-sidebar .ias-backdrop{
            display:none;
        }
    </style>
</head>

<body data-page-id="@((int?)ViewData["PageId"] ?? 0)" class="@(hideSidebar ? "ias-hide-sidebar" : "")">
    @if (!hideSidebar)
    {
        <div class="ias-backdrop" id="iasSidebarBackdrop" aria-hidden="true"></div>
    }

    <div class="ias-shell">

        <!-- SIDEBAR -->
        @if (!hideSidebar)
        {
            <aside class="ias-sidebar" id="iasSidebar">
                <div class="ias-sidebar__inner">
                    <div class="ias-sidebar__head">
                        <div class="ias-sidebar__title">
                            <span class="ias-dot"></span>
                            <span>IAS</span>
                        </div>
                        <button class="ias-collapse-btn" type="button" id="iasSidebarCollapseBtn" title="Collapse">
                            <i class="fa-solid fa-angles-left" id="iasSidebarCollapseIcon"></i>
                        </button>
                    </div>

                    <div class="ias-sidebar__searchwrap">
                        <input id="iasMenuSearch" class="ias-sidebar__search" type="search" placeholder="Search menu..." autocomplete="off" />
                    </div>

                    <div class="ias-sidebar__body" id="iasSideMenu">
                        @if (menus.Count == 0 || visiblePages.Count == 0)
                        {
                            <div class="p-3" style="color:rgba(255,255,255,.75); font-size:12px;">
                                Menu is not available for this user.
                            </div>
                        }
                        else
                        {
                            foreach (var m in menus)
                            {
                                int mId = 0;
                                string mName = "Menu";
                                try { mId = (int)m.Menu_Id; } catch { }
                                try { mName = (string)m.Menu_Name; } catch { }

                                var mPages = visiblePages.Where(p =>
                                {
                                    try { return (int)p.Menu_Id == mId; } catch { return false; }
                                }).ToList();

                                if (mPages.Count == 0) { continue; }

                                var hasSub = mPages.Any(p =>
                                {
                                    try { return !string.IsNullOrWhiteSpace((string)p.Sub_Menu); } catch { return false; }
                                });

                                <div class="ias-acc-group" data-group data-menu-id="@mId">
                                    <button type="button"
                                            class="ias-acc-btn"
                                            data-menu-btn
                                            data-menu-id="@mId"
                                            data-menu-name="@mName"
                                            aria-expanded="false"
                                            aria-controls="iasMenuPanel_@mId"
                                            title="@mName">
                                        <span class="ias-nav-bullet"></span>
                                        <span class="ias-acc-text">@mName</span>
                                        <span class="ias-acc-icon" aria-hidden="true">+</span>
                                    </button>

                                    <div id="iasMenuPanel_@mId" class="ias-acc-panel" hidden>
                                        @if (hasSub)
                                        {
                                            var subGroups = mPages
                                                .GroupBy(p =>
                                                {
                                                    try { return (string)p.Sub_Menu_Name ?? (string)p.Sub_Menu; } catch { return "Other"; }
                                                })
                                                .ToList();

                                            foreach (var sg in subGroups)
                                            {
                                                <div class="ias-subtitle" data-subtitle>@sg.Key</div>
                                                foreach (var p in sg)
                                                {
                                                    string pageName = "";
                                                    string pagePath = "";
                                                    try { pageName = (string)p.Page_Name; } catch { }
                                                    try { pagePath = (string)p.Page_Path; } catch { }

                                                    if (string.IsNullOrWhiteSpace(pageName) || string.IsNullOrWhiteSpace(pagePath)) { continue; }

                                                    <a class="ias-page-link" data-link href="~/@pagePath" title="@pageName">
                                                        <span class="ias-nav-bullet"></span>
                                                        <span>@pageName</span>
                                                    </a>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            foreach (var p in mPages)
                                            {
                                                string pageName = "";
                                                string pagePath = "";
                                                try { pageName = (string)p.Page_Name; } catch { }
                                                try { pagePath = (string)p.Page_Path; } catch { }

                                                if (string.IsNullOrWhiteSpace(pageName) || string.IsNullOrWhiteSpace(pagePath)) { continue; }

                                                <a class="ias-page-link" data-link href="~/@pagePath" title="@pageName">
                                                    <span class="ias-nav-bullet"></span>
                                                    <span>@pageName</span>
                                                </a>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </aside>
        }

        <!-- CONTENT -->
        <div class="ias-content">

            <!-- TOPBAR (keep id navBarTopMenu for compatibility with existing JS) -->
            <header class="ias-topbar">
                <nav id="navBarTopMenu" class="navbar navbar-expand-lg px-3 h-100">
                    @if (!hideSidebar)
                    {
                        <button class="ias-icon-btn d-lg-none me-2" type="button" id="iasSidebarToggleBtn" title="Menu">
                            <i class="fa-solid fa-bars"></i>
                        </button>
                    }

                    <a class="navbar-brand" href="~/Home/Index">
                        <span class="ias-brand-logo"><img src="~/Images/ztbllogo.png" alt="ZTBL" /></span>
                        <span>Internal Audit System</span>
                    </a>

                    <div class="ms-auto d-flex align-items-center gap-2">
                        <input class="ias-search d-none d-md-block" type="search" placeholder="Search (optional)" aria-label="Search" />

                        <div class="dropdown">
                            <a class="nav-link d-flex align-items-center gap-2" href="#" id="navImg" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="d-none d-md-inline">
                                    <small class="text-muted">Welcome:</small>
                                    <span id="avatarEmpName" class="text-start">
                                        <small class="d-block">@userDisplay</small>

                                        @if (!string.IsNullOrWhiteSpace(userPosting))
                                        {
                                            <small class="text-muted d-block" style="line-height:1.1;">@userPosting</small>
                                        }

                                        @if (!string.IsNullOrWhiteSpace(userRole))
                                        {
                                            <small class="text-muted d-block" style="line-height:1.1;">@userRole</small>
                                        }
                                    </span>

                                </span>
                                <span class="ias-icon-btn" aria-hidden="true"><i class="fa-regular fa-user"></i></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navImg">
                                <a class="dropdown-item" href="~/Home/Change_Password">Change Password</a>
                                <a id="logout_action_url" class="dropdown-item" href="~/Login/Logout">Logout</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="ias-main">
                @RenderBody()
            </div>

            <footer class="ias-footer">
                <div class="text-center">
                    &copy; INTERNAL AUDIT (Developed By A.A.C)
                    <span class="ms-2"><i class="footer-version">Version No: 13.01.2026</i></span>
                </div>
