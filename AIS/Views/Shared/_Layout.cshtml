        .ias-acc-btn{
            width:100%;
            display:flex;
            align-items:center;
            gap:10px;
            padding: 10px 10px;
            border-radius: 12px;
            border: 1px solid transparent;
            background: transparent;
            color: var(--ias-sidenav-text);
            font-size: 13px;
            font-weight: 800;
            cursor: pointer;
            text-align:left;
            transition: background .15s ease, border-color .15s ease;
        }
        .ias-acc-btn:hover{
            background: rgba(255,255,255,.10);
            border-color: rgba(255,255,255,.08);
        }
        .ias-acc-text{ flex: 1 1 auto; min-width:0; }
        .ias-acc-icon{
            width: 22px;
            height: 22px;
            border-radius: 8px;
            display:flex;
            align-items:center;
            justify-content:center;
            background: rgba(255,255,255,.10);
            color: rgba(255,255,255,.85);
            font-weight: 900;
            flex: 0 0 auto;
        }
        .ias-acc-panel{
            padding: 4px 0 8px 10px;
            margin-left: 8px;
            border-left: 1px dashed rgba(255,255,255,.18);
