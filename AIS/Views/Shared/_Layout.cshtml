@using System.Linq
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@{
    var baseUrl = ViewBag.BaseURL as string ?? Configuration["BaseURL"] ?? Context.Request.PathBase.Value ?? string.Empty;

    var nonce = Context.Items["CSPNonce"]?.ToString();

    var menus = (ViewData["TopMenu"] as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>()).ToList();
    var pages = (ViewData["TopMenuPages"] as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>()).ToList();
    var hideSidebar = ViewData["HideSidebar"] as bool? ?? false;

    // Visible + valid pages only (exclude special "user info" row if it exists)
    var visiblePages = pages.Where(p =>
    {
        try
        {
            if ((int)p.Menu_Id == 1020304050) return false; // special "welcome" row in some builds
        }
        catch { }

        try { return (int)p.Hide_Menu == 0; } catch { return true; }
    })
    .Where(p =>
    {
        try { return !string.IsNullOrWhiteSpace((string)p.Page_Path) && !string.IsNullOrWhiteSpace((string)p.Page_Name); }
        catch { return false; }
    })
    .ToList();

    // Pull user display (fallbacks)
    // Pull user display (fallbacks)
    string userDisplay = "";
    string userPosting = "";
    string userRole = "";

    try
    {
        foreach (var p in pages)
        {
            try
            {
                if ((int)p.Menu_Id == 1020304050)
                {
                    var nm = (string)p.Name;
                    var pp = (string)p.PPNO;

                    // NEW: capture posting + role (same fields as old layout)
                    try { userPosting = (string)p.User_Entity_Name; } catch { }
                    try { userRole = (string)p.User_Role_Name; } catch { }

                    if (!string.IsNullOrWhiteSpace(nm) && !string.IsNullOrWhiteSpace(pp))
                    {
                        userDisplay = $"{nm} ({pp})";
                        break;
                    }
                }

            }
            catch { }
        }
    }
    catch { }

    if (string.IsNullOrWhiteSpace(userDisplay))
    {
        try { userDisplay = User?.Identity?.Name ?? ""; } catch { }
    }

    var year = DateTime.Now.Year;
}
