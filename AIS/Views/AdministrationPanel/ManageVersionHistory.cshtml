@model List<VersionHistoryModel>
@{
    ViewBag.Title = "IAS Version History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // You can add custom CSS here or in your site's CSS file
}

<!-- Modern Version History Timeline -->
<div class="container py-5" id="versionHistoryApp">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <h2 class="fw-bold flex-grow-1">
                    <i class="fa-solid fa-code-branch me-2 text-primary"></i>
                    IAS Version History
                </h2>
                <button type="button" class="btn btn-gradient-primary rounded-pill shadow" data-bs-toggle="modal" data-bs-target="#addVersionModal">
                    <i class="fa-solid fa-plus"></i> Add Version
                </button>
            </div>
            <ul class="timeline position-relative list-unstyled">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var version = Model[i];
                    var isCurrent = version.IsActive == "Y";
                    <li class="timeline-item mb-5 position-relative" data-aos="fade-up" data-aos-delay="@(i * 50)">
                        <div class="card shadow-sm border-0 p-4 rounded-4 @(isCurrent ? "bg-primary bg-opacity-10 border-primary" : "bg-light")">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge rounded-pill @(isCurrent ? "bg-primary" : "bg-secondary") fs-6">
                                    <i class="fa-solid @(isCurrent ? "fa-star" : "fa-clock") me-1"></i>
                                    @(isCurrent ? "Current" : "Previous")
                                </span>
                                <div>
                                    <button class="btn btn-sm btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editVersionModal"
                                            data-id="@version.VersionId"
                                            data-versionno="@version.VersionNo"
                                            data-releasedate="@version.ReleaseDate.?ToString("yyyy-MM-dd", System.Globalization.CultureInfo.InvariantCulture)"
                                            data-description="@version.Description"
                                            data-releasedby="@version.ReleasedBy"
                                            data-isactive="@version.IsActive">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                </div>
                            </div>
                            <h4 class="fw-bold text-primary mb-2">
                                <i class="fa-solid fa-hashtag"></i> @version.VersionNo
                            </h4>
                            <div class="text-muted mb-2">
                                <i class="fa-solid fa-calendar-day me-1"></i>
                                Released: @version.ReleaseDate.?ToString("dd MMM yyyy")
                            </div>
                            <p class="mb-2">@version.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="fa-solid fa-user-gear me-1"></i>
                                    <small>By: <strong>@version.ReleasedBy</strong></small>
                                </span>
                                <span class="text-muted small">
                                    <i class="fa-solid fa-clock-rotate-left me-1"></i>
                                    Last Updated: @version.UpdatedOn?.ToString("dd MMM yyyy") ?? "-"
                                </span>
                            </div>
                        </div>
                        <span class="timeline-dot"></span>
                        @if (i < Model.Count - 1)
                        {
                            <span class="timeline-connector"></span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<!-- Add Version Modal -->
<div class="modal fade" id="addVersionModal" tabindex="-1" aria-labelledby="addVersionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow-lg">
            <form id="addVersionForm" method="post" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="addVersionModalLabel">
                        <i class="fa-solid fa-plus"></i> Add New Version
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Version Number</label>
                        <input type="text" name="VersionNo" class="form-control rounded-pill" required maxlength="20">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Release Date</label>
                        <input type="date" name="ReleaseDate" class="form-control rounded-pill" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control rounded-4" rows="3" required maxlength="500"></textarea>
                    </div>
                    <!-- ReleasedBy set in backend from session -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill">Save Version</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Version Modal (populated by JS) -->
<div class="modal fade" id="editVersionModal" tabindex="-1" aria-labelledby="editVersionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow-lg">
            <form id="editVersionForm" method="post" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="editVersionModalLabel">
                        <i class="fa-solid fa-pen"></i> Edit Version
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="VersionId" id="editVersionId" />
                    <div class="mb-3">
                        <label class="form-label">Version Number</label>
                        <input type="text" name="VersionNo" id="editVersionNo" class="form-control rounded-pill" required maxlength="20">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Release Date</label>
                        <input type="date" name="ReleaseDate" id="editReleaseDate" class="form-control rounded-pill" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="Description" id="editDescription" class="form-control rounded-4" rows="3" required maxlength="500"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Active</label>
                        <select name="IsActive" id="editIsActive" class="form-select rounded-pill">
                            <option value="Y">Yes (Current)</option>
                            <option value="N">No (Previous)</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill">Update Version</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Timeline Custom CSS -->
<style>
    .timeline {
        margin-left: 2.5rem;
        position: relative;
        padding-left: 2rem;
    }

    .timeline-item {
        position: relative;
    }

    .timeline-dot {
        position: absolute;
        left: -40px;
        top: 24px;
        width: 20px;
        height: 20px;
        background: linear-gradient(135deg, #0d6efd 60%, #6c63ff 100%);
        border-radius: 50%;
        box-shadow: 0 0 8px #0d6efd44;
        border: 3px solid #fff;
        z-index: 2;
    }

    .timeline-connector {
        position: absolute;
        left: -31px;
        top: 44px;
        width: 4px;
        height: calc(100% - 44px);
        background: linear-gradient(to bottom, #e0e7ff, #6c63ff 80%);
        z-index: 1;
        border-radius: 2px;
    }

    .card.bg-primary.bg-opacity-10 {
        border: 2px solid #6c63ff;
    }
@@media (max-width: 767px) {
    .timeline { margin-left: 0; padding-left: 0;}
    .timeline-dot, .timeline-connector { left: -20px; }
}

    .btn-gradient-primary {
        background: linear-gradient(90deg, #6c63ff 60%, #0d6efd 100%);
        color: #fff;
        border: none;
    }

        .btn-gradient-primary:hover, .btn-gradient-primary:focus {
            background: linear-gradient(90deg, #0d6efd 60%, #6c63ff 100%);
            color: #fff;
        }
</style>

<!-- Auto-populate Edit Modal with selected data -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var editModal = document.getElementById('editVersionModal');
        editModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            document.getElementById('editVersionId').value = button.getAttribute('data-id');
            document.getElementById('editVersionNo').value = button.getAttribute('data-versionno');
            document.getElementById('editReleaseDate').value = button.getAttribute('data-releasedate');
            document.getElementById('editDescription').value = button.getAttribute('data-description');
            document.getElementById('editIsActive').value = button.getAttribute('data-isactive');
        });

        var addForm = document.getElementById('addVersionForm');
        if (addForm) {
            addForm.addEventListener('submit', async function (e) {
                e.preventDefault();

                var formData = new FormData(addForm);
                var payload = {
                    VersionNo: formData.get('VersionNo'),
                    ReleaseDate: formData.get('ReleaseDate'),
                    Description: formData.get('Description')
                };

                var response = await fetchWithPageId('/ApiCalls/AddVersionHistory', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    location.reload();
                }
            });
        }

        var editForm = document.getElementById('editVersionForm');
        if (editForm) {
            editForm.addEventListener('submit', async function (e) {
                e.preventDefault();

                var formData = new FormData(editForm);
                var payload = {
                    VersionId: formData.get('VersionId'),
                    VersionNo: formData.get('VersionNo'),
                    ReleaseDate: formData.get('ReleaseDate'),
                    Description: formData.get('Description'),
                    IsActive: formData.get('IsActive')
                };

                var response = await fetchWithPageId('/ApiCalls/UpdateVersionHistory', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    location.reload();
                }
            });
        }
    });
</script>
