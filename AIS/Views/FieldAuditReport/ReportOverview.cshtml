@model AIS.Models.FieldAuditReport.FieldAuditReportOverviewViewModel

@{
    ViewData["Title"] = "Field Audit Report Overview";
    Layout = "_Layout";

    string FormatDate(DateTime? value) => value?.ToString("dd/MM/yyyy") ?? "-";
    var engagementSelector = ViewData["EngagementSelector"] as AIS.Models.FieldAuditReport.FieldAuditEngagementSelectorViewModel;
    var hasEngagement = engagementSelector?.HasActiveEngagement ?? false;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3 class="mb-3">Field Audit Report - Overview</h3>
        </div>
    </div>

    @await Html.PartialAsync("_GetEngagementSelector", engagementSelector)

    @if (!hasEngagement)
    {
        <div class="alert alert-warning">Select an engagement to view the Field Audit Report overview.</div>
    }

    @if (TempData["FieldAuditReportMessage"] != null)
    {
        <div class="alert alert-info">@TempData["FieldAuditReportMessage"]</div>
    }

    @if (hasEngagement)
    {
        <div class="card mb-4">
            <div class="card-header">Report Summary</div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <strong>ENG_ID:</strong> @Model.Overview.EngId
                    </div>
                    <div class="col-md-4">
                        <strong>Entity:</strong> @Model.Overview.EntityName (@Model.Overview.EntityCode)
                    </div>
                    <div class="col-md-4">
                        <strong>Audit Period:</strong> @Model.Overview.AuditPeriod
                    </div>
                    <div class="col-md-4">
                        <strong>Audit Start Date:</strong> @FormatDate(Model.Overview.AuditStartDate)
                    </div>
                    <div class="col-md-4">
                        <strong>Audit End Date:</strong> @FormatDate(Model.Overview.AuditEndDate)
                    </div>
                    <div class="col-md-4">
                        <strong>Team Leader:</strong> @Model.Overview.TeamName
                    </div>
                    <div class="col-md-4">
                        <strong>Report Status:</strong> @Model.ReportStatus
                    </div>
                    <div class="col-md-4">
                        <strong>Version No:</strong> @Model.Overview.VersionNo
                    </div>
                    <div class="col-md-4">
                        <strong>Generated By/On:</strong> @Model.Overview.GeneratedBy / @FormatDate(Model.Overview.GeneratedOn)
                    </div>
                    <div class="col-md-4">
                        <strong>Finalized By/On:</strong> @Model.Overview.FinalizedBy / @FormatDate(Model.Overview.FinalizedOn)
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Completion Checklist</div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        KPI Snapshot
                        <span class="text-@((Model.Checklist.HasKpiSnapshot ? "success" : "danger"))">
                            <i class="fa-solid @(Model.Checklist.HasKpiSnapshot ? "fa-circle-check" : "fa-circle-xmark")"></i>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        NPL Snapshot
                        <span class="text-@((Model.Checklist.HasNplSnapshot ? "success" : "danger"))">
                            <i class="fa-solid @(Model.Checklist.HasNplSnapshot ? "fa-circle-check" : "fa-circle-xmark")"></i>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Staff Snapshot
                        <span class="text-@((Model.Checklist.HasStaffSnapshot ? "success" : "danger"))">
                            <i class="fa-solid @(Model.Checklist.HasStaffSnapshot ? "fa-circle-check" : "fa-circle-xmark")"></i>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Mandatory Narrative Sections
                        <span class="text-@((Model.Checklist.MandatoryNarrativesComplete ? "success" : "danger"))">
                            <i class="fa-solid @(Model.Checklist.MandatoryNarrativesComplete ? "fa-circle-check" : "fa-circle-xmark")"></i>
                        </span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Actions</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a class="btn btn-primary @(Model.IsFinal ? "disabled" : string.Empty)" href="@Url.Action("NarrativeSections")" aria-disabled="@Model.IsFinal">Edit Narrative Sections</a>
                <a class="btn btn-primary @(Model.IsFinal ? "disabled" : string.Empty)" href="@Url.Action("KpiSnapshot")" aria-disabled="@Model.IsFinal">Edit KPI Snapshot</a>
                <a class="btn btn-primary @(Model.IsFinal ? "disabled" : string.Empty)" href="@Url.Action("NplSnapshot")" aria-disabled="@Model.IsFinal">Edit NPL Snapshot</a>
                <a class="btn btn-primary @(Model.IsFinal ? "disabled" : string.Empty)" href="@Url.Action("StaffSnapshot")" aria-disabled="@Model.IsFinal">Edit Staff Snapshot</a>
                <a class="btn btn-success @(!Model.CanFinalize ? "disabled" : string.Empty)" href="@Url.Action("FinalizeReport")" aria-disabled="@(!Model.CanFinalize)">Finalize Report</a>
            </div>
        </div>
    }
</div>
