@using System.Linq
@model AIS.Models.ObservationPdfDataModel
@{
    Layout = null;
    var memoDate = Model?.MemoDate?.ToString("dd-MMM-yyyy") ?? string.Empty;
    var hasResponsibilities = Model?.Responsibilities != null
        && Model.Responsibilities.Any(item =>
            !string.IsNullOrWhiteSpace(item.PpNo)
            || !string.IsNullOrWhiteSpace(item.LoanCase)
            || !string.IsNullOrWhiteSpace(item.LcAmount));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Observation Print</title>
    <style>
        @page {
            size: A4;
            margin: 20mm;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: "Segoe UI", Arial, sans-serif;
            color: #111;
            font-size: 12.5px;
            line-height: 1.5;
            margin: 0;
            background: #fff;
        }

        .page {
            width: 100%;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 18px;
        }

        .title {
            font-size: 18px;
            font-weight: 700;
        }

        .memo-date {
            text-align: right;
            font-size: 12.5px;
        }

        .section {
            margin-bottom: 10px;
        }

        .label {
            font-weight: 600;
        }

        .body-text {
            margin-top: 6px;
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        .responsibility-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 6px;
        }

        .responsibility-table th,
        .responsibility-table td {
            border: 1px solid #666;
            padding: 6px 8px;
            text-align: left;
            vertical-align: top;
        }

        .responsibility-table th {
            background: #f3f3f3;
        }

        .responsibility-table tr {
            page-break-inside: avoid;
            break-inside: avoid;
        }

        .disclaimer {
            margin-top: 26px;
            font-size: 11px;
        }

        @media print {
            body {
                margin: 0;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="page">
        <header class="header">
            <div class="title">Internal Audit System</div>
            <div class="memo-date">
                <div><span class="label">Memo Date:</span> @memoDate</div>
            </div>
        </header>

        <section class="section">
            <span class="label">Memo No:</span> @Model?.MemoNumber
        </section>
        <section class="section">
            <span class="label">Title:</span> @Model?.Title
        </section>
        <section class="section">
            <span class="label">Annexure:</span> @Model?.Annexure
        </section>
        <section class="section">
            <span class="label">Risk:</span> @Model?.Risk
        </section>
        <section class="section">
            <div class="label">Body:</div>
            <div class="body-text">@Html.Raw(Model?.ParaText ?? string.Empty)</div>
        </section>

        @if (hasResponsibilities)
        {
            <section class="section">
                <div class="label">Responsibility</div>
                <table class="responsibility-table">
                    <thead>
                        <tr>
                            <th>PP No</th>
                            <th>Loan Case</th>
                            <th>LC Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var responsibility in Model.Responsibilities)
                    {
                        if (string.IsNullOrWhiteSpace(responsibility.PpNo)
                            && string.IsNullOrWhiteSpace(responsibility.LoanCase)
                            && string.IsNullOrWhiteSpace(responsibility.LcAmount))
                        {
                            continue;
                        }
                        <tr>
                            <td>@responsibility.PpNo</td>
                            <td>@responsibility.LoanCase</td>
                            <td>@responsibility.LcAmount</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </section>
        }

        <div class="disclaimer">
            Disclaimer: System-generated memo does not require a signature and is subject to change before finalizing the audit report.
        </div>
    </div>

    <script>
        window.addEventListener("load", () => {
            window.print();
        });
        window.addEventListener("afterprint", () => {
            window.close();
        });
    </script>
</body>
</html>
